<!DOCTYPE html>
<html>
  <head>
    <title>Rorbdd</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |key, message| %>
      <div class="text-center alert alert-<%= key == 'notice'? 'success' : 'danger' %>">
        <%= message %>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
